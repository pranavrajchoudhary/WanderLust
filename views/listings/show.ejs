<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= thisListing.title %> | WanderLust
  </title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Poppins:wght@400;500;600&display=swap"
    rel="stylesheet">

  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: #fef9f4;
      color: #2c2c2c;
    }

    h1,
    h2,
    h3 {
      font-family: 'Playfair Display', serif;
    }

    .listing-wrapper {
      max-width: 1000px;
      margin: 2rem auto;
      background: #fff;
      box-shadow: 0 10px 24px rgba(0, 0, 0, 0.1);
      border-radius: 15px;
      overflow: hidden;
    }

    .listing-image {
      width: 100%;
      height: 420px;
      background-size: cover;
      background-position: center;
      border-bottom: 4px solid #ff385c;
    }

    .listing-content {
      padding: 2rem;
    }

    .title {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    .location {
      font-size: 1rem;
      color: #777;
      margin-bottom: 1rem;
    }

    .description {
      font-size: 1.05rem;
      color: #555;
      margin-bottom: 1.5rem;
      line-height: 1.7;
    }

    .price {
      font-size: 1.2rem;
      font-weight: 600;
      color: #222;
      margin-bottom: 2rem;
    }

    .btn-book {
      display: inline-block;
      background-color: #ff385c;
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      font-weight: bold;
      font-size: 1rem;
      text-decoration: none;
      transition: background 0.3s ease;
    }

    .btn-book:hover {
      background-color: #e03150;
    }

    .cta {
      margin-top: 1.5rem;
      display: flex;
      gap: 1rem;
    }

    .cta form button {
      background-color: #333;
      color: white;
      padding: 0.6rem 1.2rem;
      font-size: 0.95rem;
      border: none;
      border-radius: 10px;
      cursor: pointer;
    }

    .cta form button:hover {
      background-color: #222;
    }

    /* Owner Section */
    .owner-section {
      background-color: #fff8f0;
      padding: 2rem;
      border-top: 1px solid #eee;
      display: flex;
      align-items: center;
      gap: 1.5rem;
      border-bottom: 1px solid #eee;
    }

    .owner-avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background-color: #ddd;
      background-size: cover;
      background-position: center;
    }

    .owner-details h3 {
      font-size: 1.25rem;
      margin-bottom: 0.3rem;
    }

    .owner-details p {
      margin: 0;
      font-size: 0.95rem;
      color: #555;
    }

    /* Map */
    #map {
      width: 100%;
      height: 300px;
    }

    @media (max-width: 768px) {
      .listing-wrapper {
        margin: 1rem;
      }

      .listing-image {
        height: 250px;
      }

      .listing-content {
        padding: 1.2rem;
      }

      .title {
        font-size: 1.5rem;
      }

      .cta {
        flex-direction: column;
      }

      .owner-section {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
  <link rel="icon" href="/wanderlusticon.png" type="image/x-icon">
  <link rel="stylesheet" href="/review.css">
</head>

<body>
  <%- include("../partials/navbar.ejs") %>
  <%- include("../partials/flash.ejs") %>

  <div class="listing-wrapper">
    <div class="listing-image" style="background-image: url('<%= thisListing.image.url %>');"></div>
    <div class="listing-content">
      <h1 class="title">
        <%= thisListing.title %>
      </h1>
      <p class="location">üìç <%= thisListing.location %></p>
      <p class="description">
        <%= thisListing.description %>
      </p>
      <p class="price">‚Çπ <%= thisListing.price.toLocaleString("en-IN") %> / night</p>
      <a href="/listings/<%= thisListing._id %>/checkout" class="btn-book">Book Now</a>

      <% if(currUser && currUser._id.equals(thisListing.owner._id)){ %>
      <div class="cta">
        <form action="/listings/<%= thisListing._id %>/edit" method="get">
          <button type="submit">Edit</button>
        </form>
        <form action="/listings/<%= thisListing._id %>/delete?_method=DELETE" method="post">
          <button type="submit">Delete</button>
        </form>
      </div>
      <% } %>
    </div>

    <!-- Map Section -->
    <% if (thisListing.geometry && thisListing.geometry.coordinates && thisListing.geometry.coordinates.length === 2) { %>
      <div id="map"></div>
    <% } else { %>
      <p style="padding:1rem; color:#777;">No map location available for this listing.</p>
    <% } %>

    <!-- Owner Section -->
    <div class="owner-section">
      <div class="owner-details">
        <h3 style="color: red;">About Host</h3>
        <h3>
          <%= thisListing.owner.username %>
        </h3>
        <p>Hosting since: 5 years</p>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="review-section">
      <h2 class="review-title">Reviews</h2>
      <% if(currUser) { %>
        <form action="/listings/<%= thisListing._id %>/reviews" method="POST" class="review-form">
          <fieldset class="starability-slot">
            <legend>First rating:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="rating" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="rating" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="rating" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="rating" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="rating" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <label for="comment">Your Review:</label>
          <textarea id="comment" name="comment" rows="3" placeholder="Write your thoughts..." required></textarea>
          <button type="submit" class="btn-submit-review">Submit Review</button>
        </form>
      <% } else { %>
        <h4 style="color: rgb(148, 68, 68);">Login to write a review</h4>
      <% } %>

      <% if (thisListing.reviews.length===0) { %>
        <p class="no-reviews">No reviews yet. Be the first to review!</p>
      <% } else { %>
        <hr>
        <div class="reviews-container">
          <% thisListing.reviews.forEach(review=> { %>
            <div class="review-card">
              <div class="review-header">
                <h4><b>@</b><%= review.author.username %></h4>
                <p class="starability-result" data-rating="<%- review.rating %>">Rated: <%= review.rating %> stars</p>
                <span class="review-date">
                  <%= new Date(review.createdAt).toLocaleDateString("en-IN", { year: 'numeric' , month: 'short' , day: 'numeric' }) %>
                </span>
              </div>
              <p class="review-text"><%= review.comment %></p>
              <% if(currUser && currUser._id.equals(review.author._id)) { %>
                <form action="/listings/<%= thisListing._id %>/review/<%= review._id %>/delete" method="POST">
                  <button class="delete-btn" type="submit">üóë Delete</button>
                </form>
              <% } %>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <%- include("../partials/footer.ejs") %>

  <!-- Leaflet JS -->
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <% if (thisListing.geometry && thisListing.geometry.coordinates && thisListing.geometry.coordinates.length === 2) { %>
    <script>
      const coords = <%- JSON.stringify(thisListing.geometry.coordinates) %>; // [lng, lat]
      const map = L.map('map').setView([coords[1], coords[0]], 13);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
      }).addTo(map);

      L.marker([coords[1], coords[0]]).addTo(map)
        .bindPopup(`<b><%= thisListing.title %></b><br><%= thisListing.location %>`)
        .openPopup();
    </script>
  <% } %>
</body>
</html>
